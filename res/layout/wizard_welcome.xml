<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.googlecode.gtalksms"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <LinearLayout 
        android:id="@+id/linearLayout1" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="vertical" 
        android:layout_weight="10" >
	    <TextView 
	        android:text="@string/wizard_welcome_text" 
	        android:layout_width="fill_parent" 
	        android:gravity="top|left" 
	        android:layout_weight="10" 
	        android:layout_height="wrap_content" />
	    <EditText 
	       android:layout_width="match_parent" 
	       android:layout_height="wrap_content" 
	       android:id="@+id/notificationAddress" 
	       android:text="username@jabber.server" 
	       android:inputType="textEmailAddress"/>
	    <RadioGroup 
	       android:layout_width="wrap_content" 
	       android:layout_height="wrap_content" 
	       android:id="@+id/radioGroupWelcome" />
    </LinearLayout>
    
    <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="0" > 
        
        <Button 
            android:layout_height="40dp" 
            android:layout_width="fill_parent" 
            android:layout_weight=".5"
            android:fitsSystemWindows="true" 
            android:gravity="center" 
            android:layout_gravity="center" 
            android:id="@+id/nextBut" 
            android:text="@string/wizard_next_button" /> 
    </LinearLayout>
    
    <TextView 
        android:text="Version X.X.X @Yakooo" 
        android:id="@+id/VersionLabel"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" 
        android:gravity="bottom|right" 
        android:layout_weight="0"/>

</LinearLayout>